<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/song_import_activity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.guilhermecastello.songbook.activity.SongImportActivity">

    <Button
        android:text="Importar de Assets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnImportFromAssets"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="btnImportFromAssetsOnClick"/>

    <Button
        android:text="Importar de NewSongs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnImportFromAssets"
        android:id="@+id/btnImportFromHomeFolder"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="btnImportFromHomeFolderOnClick"/>

    <Button
        android:text="Importar de QR Code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnImportFromHomeFolder"
        android:id="@+id/btnImportFromQRCode"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="btnImportFromQRCodeOnClick"/>

</RelativeLayout>
